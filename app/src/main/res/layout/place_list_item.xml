<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="7.04">

            <TextView
                android:text="Campus"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/textViewPlaceName"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:text="Matara,Sri Lanka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPlaceAddress" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/floatingActionButton5"
            android:layout_weight="3.57"
            app:backgroundTint="@android:color/background_light"
            android:layout_margin="5dp"
            app:rippleColor="@color/lgreen"
            app:elevation="0dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/button_onoff_indicator_off"
            android:id="@+id/floatingActionButton4"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            app:rippleColor="@color/lgreen"
            app:elevation="0dp" />

    </LinearLayout>

</LinearLayout>