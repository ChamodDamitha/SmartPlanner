<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_weight="0.28">

            <TextView
                android:text="Campus"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/textViewPlaceName"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:text="Matara,Sri Lanka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPlaceAddress" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/edit"
            android:id="@+id/btnEditPlace"
            app:backgroundTint="@android:color/background_light"
            app:rippleColor="@color/lgreen"
            app:elevation="0dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/delete"
            android:id="@+id/btnDelPlace"
            app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            app:rippleColor="@color/lgreen"
            app:elevation="0dp" />

    </LinearLayout>

</LinearLayout>