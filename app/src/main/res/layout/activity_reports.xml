<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chamod.smartplanner.ReportsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <Button
            android:text="send daily data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="sendDailyData"
            />

        <Button
            android:text="Get Report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="getReport"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:onClick="showDatePicker">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/date"
                android:id="@+id/imageView4" />

            <TextView
                android:text="MON,14 FEB 2017 "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewDate"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightGreen"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:id="@+id/completionPanel">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

                <TextView
                    android:text="45%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/taskCompletion"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:layout_weight="0.08" />

            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarCompletion"
                android:progress="50" />

        </LinearLayout>

        <ListView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:id="@+id/listViewReportTasks"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="true"
            android:dividerHeight="3dp"
            android:divider="@android:color/transparent"
            android:background="@android:color/background_light"
            />

    </LinearLayout>

</RelativeLayout>
