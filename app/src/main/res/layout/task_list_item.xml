<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:padding="10dp"
    >

    <TextView
        android:text="FRI, 3.00 PM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:text="Meeting with X"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewDescription"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_weight="0.93"
            android:padding="2dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/bottom_bar"
            android:id="@+id/floatingActionButton6"
            app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            app:rippleColor="?attr/colorAccent"

            android:layout_alignParentRight="true"
            android:tint="@color/common_google_signin_btn_text_light_disabled"
            app:elevation="2dp" />

    </LinearLayout>

    <TextView
        android:text="At Colombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLocation"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored" />
</LinearLayout>