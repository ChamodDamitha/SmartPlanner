<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chamod.smartplanner.MessageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:text="SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button"
                android:id="@+id/btnSave"
                android:layout_weight="1"
                android:onClick="saveMessageTask"
                android:background="@color/lgreen"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"

                />

            <Button
                android:text="CANCEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/button"
                android:layout_weight="1"
                android:background="@color/lgreen"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:onClick="cancelTask"
                />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="1">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@android:color/background_light"
                    android:layout_margin="2dp"
                    >

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/note"
                        android:id="@+id/imageView6"
                        android:padding="10dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="156dp"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/txtMessagge"
                        android:hint="Enter the message"
                        android:gravity="top"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:onClick="showDatePicker"
                    android:background="@android:color/background_light"
                    android:layout_margin="2dp"
                    android:id="@+id/time_pad">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@color/colorLightGreen"
                        >

                        <TextView
                            android:text="DATE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:padding="1dp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

                        <ImageView
                            android:layout_height="84dp"
                            android:id="@+id/imageView7"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/date" />
                        <TextView
                            android:text="FRI, 10 FEB 2017"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textViewDate"
                            android:padding="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/wallet_highlighted_text_holo_light"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:onClick="showTimePicker"
                        >

                        <TextView
                            android:text="TIME"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:padding="1dp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:id="@+id/imageView11"
                            android:adjustViewBounds="false"
                            android:cropToPadding="false"
                            android:padding="10dp"
                            android:src="@drawable/time" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textViewTime"
                            android:padding="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="12.00 PM" />

                        <TextView
                            android:text="on time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewRem"
                            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                            android:paddingLeft="45dp"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorLightGray"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:onClick="pickContact"
                    >

                    <TextView
                        android:text="Receiver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:padding="1dp"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:id="@+id/imageView12"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:padding="10dp"
                        android:src="@drawable/common_full_open_on_phone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewContact"
                        android:padding="2dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="Chamod - 07132555555" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
