<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chamod.smartplanner.NewTaskActivity"
    android:background="@color/colorLightGray"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:text="SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button"
                android:id="@+id/btnSave"
                android:layout_weight="1"
                android:onClick="saveTask"
                android:background="@color/lgreen"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"

                />

            <Button
                android:text="CANCEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/button"
                android:layout_weight="1"
                android:background="@color/lgreen"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:onClick="cancelTask"
                />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="1">

                <CheckBox
                    android:text="Schedule for every week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBoxRepeatTask"
                    android:layout_below="@+id/timePicker"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_bg"
                    android:padding="5dp"
                    >

                    <TextView
                        android:text="Alert On"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_below="@+id/textView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:paddingLeft="10dp"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:text="Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBoxTime"
                            android:layout_below="@+id/textView4"
                            android:layout_alignStart="@+id/textView4"
                            android:layout_marginRight="20dp"
                            android:checked="true" />

                        <CheckBox
                            android:text="Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBoxLocation"
                            android:layout_below="@+id/textView4"
                            android:layout_alignStart="@+id/btnSave"
                            android:checked="true" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@android:color/background_light"
                    android:layout_margin="2dp"
                    >

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/note"
                        android:id="@+id/imageView6"
                        android:padding="10dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/txtDesc"
                        android:hint="Enter Description"
                        android:gravity="top"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:onClick="dateClicked"
                    android:background="@android:color/background_light"
                    android:layout_margin="2dp"
                    android:id="@+id/time_pad">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@color/colorLightGreen"
                        >

                        <TextView
                            android:text="DATE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:padding="1dp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

                        <ImageView
                            android:layout_height="84dp"
                            android:id="@+id/imageView7"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/date" />
                        <TextView
                            android:text="FRI, 10 FEB 2017"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textViewDate"
                            android:padding="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/wallet_highlighted_text_holo_light"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:onClick="timeClicked"
                        >

                        <TextView
                            android:text="TIME"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:padding="1dp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:id="@+id/imageView11"
                            android:adjustViewBounds="false"
                            android:cropToPadding="false"
                            android:padding="10dp"
                            android:src="@drawable/time" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textViewTime"
                            android:padding="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="12.00 PM" />

                        <TextView
                            android:text="on time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewRem"
                            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                            android:paddingLeft="45dp"
                            android:onClick="viewReminderClicked"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:background="@android:color/background_light"
                    android:layout_margin="2dp"
                    android:id="@+id/locationPad"
                    android:layout_weight="1.38">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@color/colorLightBrown"
                        >

                        <TextView
                            android:text="LOCATION"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:padding="1dp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="93dp">

                            <ImageView
                                android:layout_height="84dp"
                                android:id="@+id/imageView9"
                                android:padding="5dp"
                                android:layout_width="143dp"
                                android:src="@drawable/location"
                                android:layout_weight="1"
                                android:onClick="locationClicked"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:clickable="true"
                                app:fabSize="mini"
                                app:srcCompat="@android:drawable/ic_dialog_map"
                                android:id="@+id/floatingActionButton"
                                app:backgroundTint="@android:color/black"
                                android:onClick="showMyPlaces"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textViewLocation"
                            android:padding="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:weightSum="1">

                        <TextView
                            android:text="RANGE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:padding="1dp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="73dp"
                            android:id="@+id/imageView5"
                            android:adjustViewBounds="false"
                            android:cropToPadding="false"
                            android:src="@drawable/range" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:hint="(in metres)"
                            android:ems="10"
                            android:id="@+id/editTextRange"
                            android:gravity="center"
                            android:text="1.0" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
