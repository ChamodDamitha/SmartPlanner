<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chamod.smartplanner.NewTaskActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >

            <Button
                android:text="SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button"
                android:id="@+id/btnSave"
                android:layout_weight="1"
                android:onClick="saveTask"
                />

            <Button
                android:text="CANCEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/button"
                android:layout_weight="1" />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="445dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/note"
                        android:id="@+id/imageView6"
                        android:padding="5dp"
                        />

                    <EditText
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/txtDesc"
                        android:layout_alignParentEnd="true"
                        android:padding="8dp"
                        android:hint="Enter Description"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="dateClicked"
                    >

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:id="@+id/imageView7"
                        android:padding="5dp"
                        />

                    <TextView
                        android:text="FRI, 10 FEB 2017"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewDate"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:padding="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="TimeClicked"
                    >

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@android:drawable/ic_lock_idle_alarm"
                        android:id="@+id/imageView5"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:padding="5dp"
                        />

                    <TextView
                        android:text="TIME"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewTime"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:onClick="TimeClicked"
                        android:padding="8dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="locationClicked"
                    >

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/location"
                        android:id="@+id/imageView4"
                        android:padding="5dp"
                        />

                    <TextView
                        android:text="LOCATION"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewLocation"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:padding="8dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"
                    />

                <CheckBox
                    android:text="Schedule for every week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"
                    android:layout_below="@+id/timePicker"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_bg"
                    android:padding="5dp"
                    >

                    <TextView
                        android:text="Alert On"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_below="@+id/textView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:paddingLeft="10dp"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:text="Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox2"
                            android:layout_below="@+id/textView4"
                            android:layout_alignStart="@+id/textView4"
                            android:layout_marginRight="20dp"
                            />

                        <CheckBox
                            android:text="Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox3"
                            android:layout_below="@+id/textView4"
                            android:layout_alignStart="@+id/btnSave" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:text="People"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/checkBox2"
                    android:layout_alignParentStart="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Chamod"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
