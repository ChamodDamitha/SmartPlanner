<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chamod.smartplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewTaskActivity" />
        <activity android:name=".PredictedScheduleActivity" />
        <activity android:name=".ReminderActivity" />
        <activity android:name=".MyPlacesActivity" />
        <activity
            android:name=".RepeatingTasksActivity"
            android:label="@string/title_activity_repeating_tasks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ReportsActivity" />
        <activity android:name=".SignInActivity" />

        <receiver
            android:name=".TaskReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>